include ../../bebop_make/options
include ../../bebop_make/Makefile.include
include ../../bebop_make/ecl
include ../../bebop_make/setup


## Set up library and include paths
CPPFLAGS += -I../../bebop_util/include 
LIBS += -L../../bebop_util -lbebop_util 

## Object files 
OBJS = hb_tok.o hb_parser.o hb_test.o

all: $(OBJS)

test.x: $(OBJS)
	$(LINKER) $(CPPFLAGS) $(CFLAGS) -o $@ $(OBJS) $(LIBS)

.c.o: gcc 
	$(CC) $(CPPFLAGS) $(CFLAGS) -c $< -o $@

hb_tok.o: hb_tok.h hb_tok.c

hb_parser.o: hb_parser.c hb_parser.h hb_tok.h

hb_test.o: hb_test.c hb_parser.h hb_tok.h
