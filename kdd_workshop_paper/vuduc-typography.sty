% === Internal references ===
\newcommand{\RefFigure}[1]{Figure~\ref{#1}}
\newcommand{\RefFigurePair}[2]{Figures~\ref{#1} and~\ref{#2}}
\newcommand{\reffig}[1]{figure~\ref{#1}}
\newcommand{\RefEquation}[1]{Equation~\eqref{#1}}
\newcommand{\refequ}[1]{equation~\eqref{#1}}
\newcommand{\RefEquationPair}[2]{Equations~\eqref{#1} and~\eqref{#2}}
\newcommand{\refequpair}[2]{equations~\eqref{#1} and~\eqref{#2}}
\newcommand{\refequs}[2]{equations~\eqref{#1}--\eqref{#2}}
\newcommand{\RefLemma}[1]{Lemma~\ref{#1}}
\newcommand{\reflem}[1]{lemma~\ref{#1}}
\newcommand{\RefTheorem}[1]{Theorem~\ref{#1}}
\newcommand{\refthm}[1]{theorem~\ref{#1}}
\newcommand{\RefTable}[1]{Table~\ref{#1}}
\newcommand{\reftab}[1]{table~\ref{#1}}
\newcommand{\RefSection}[1]{Section~\ref{#1}}
\newcommand{\refsec}[1]{\S\,\ref{#1}}
\newcommand{\RefSecs}[2]{Sections~\ref{#1}--\ref{#2}}
\newcommand{\refsecs}[2]{\S\,\ref{#1}--\ref{#2}}
\newcommand{\RefAlgorithm}[1]{Algorithm~\ref{#1}}
\newcommand{\refalg}[1]{algorithm~\ref{#1}}

